<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444C5A"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/cpi_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </lecho.lib.hellocharts.view.LineChartView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSplash"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.31">

        <TextView
            android:id="@+id/cpi_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corruption Perceptions Index for Asia Pacific   "
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:drawableRight="@drawable/info"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#444C5A"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_weight="0.3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="Country"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#33B5E5"
            android:textSize="15sp"
            android:text="Regional Rank"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#AA66CC"
            android:textSize="15sp"
            android:text="Country Rank"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#99CC00"
            android:textSize="15sp"
            android:text="Score"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/cpi_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.19"
        android:scrollbars="horizontal">
    </ListView>

</LinearLayout>