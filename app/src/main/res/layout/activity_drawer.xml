<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_view"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_drawer1"/>
        <TextView
            android:id="@+id/complaintState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고충민원 현황"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/years"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="right">
        <TextView
            android:id="@+id/year_2008"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2008년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2009"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2009년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2010"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2010년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2011"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2012"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2013"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2014"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/year_2015"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/year_2016"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016년"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:onClick="onClick"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/drawer2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설문조사"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25sp"
            />
    </LinearLayout>
</LinearLayout>

